<% @products.each do |product| %>
 <tr>
   <td><%= product.title %></td>
   <td><%= product.price %></td>
   <td><%= link_to 'Show', product, remote: true %></td>
   <td><%= link_to 'Edit', edit_product_path(product), remote: true %></td>
   <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
 </tr>
<% end %>

